[Unit]
Description=StayRTR for inet routes
After=network.target

[Service]
Type=simple
DynamicUser=true
CapabilityBoundingSet=
PrivateDevices=true
ProtectClock=true
ProtectControlGroups=true
ProtectHome=true
ProtectKernelModules=true
ProtectKernelLogs=true
ProtectKernelTunables=true
RestrictAddressFamilies=AF_INET AF_INET6
RestrictRealtime=true
UMask=0077
ExecStart=/usr/bin/stayrtr -bind=:8282 -protocol=0 -cache=https://console.rpki-client.org/rpki.json

[Install]
WantedBy=multi-user.target
